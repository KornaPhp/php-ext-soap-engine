{
    "name": "php-soap/ext-soap-engine",
    "description": "An ext-soap engine implementation",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Soap\\ExtSoapEngine\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SoapTest\\ExtSoapEngine\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Toon Verwerft",
            "email": "toonverwerft@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-soap": "*",
        "ext-dom": "*",
        "php-soap/engine": "dev-main",
        "symfony/options-resolver": "^5.3"
    },
    "require-dev": {
        "php-soap/engine-integration-tests": "dev-main",
        "php-soap/xml": "dev-main",
        "phpunit/phpunit": "^9.5"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../engine"
        },
        {
            "type": "path",
            "url": "../engine-integration-tests"
        },
        {
            "type": "path",
            "url": "../xml"
        }
    ]
}
